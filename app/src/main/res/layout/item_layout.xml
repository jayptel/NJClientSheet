<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/idTextlable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id: "
        android:textSize="18sp"
        android:textColor="#B06ED8"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/idTextlable"
        android:layout_toLeftOf="@id/buttonEdit"
        android:layout_toStartOf="@id/buttonEdit"
        android:layout_toEndOf="@id/idTextlable"
        android:text="John Doe with a very long name that will wrap to the next line"

        android:textSize="18sp"/>
    <TextView
        android:id="@+id/nameTextlable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:textColor="#B06ED8"
        android:textStyle="bold"
        android:layout_below="@id/idTextView"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/idTextView"
        android:layout_toRightOf="@id/nameTextlable"
        android:layout_toLeftOf="@id/buttonEdit"
        android:layout_toStartOf="@id/buttonEdit"
        android:layout_toEndOf="@id/nameTextlable"
        android:text="John Doe with a very long name that will wrap to the next line"

        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/descriptionTextlable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="14sp"
        android:textColor="#B06ED8"
        android:layout_below="@id/nameTextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/buttonEdit"
        android:layout_toEndOf="@id/descriptionTextlable"
        android:layout_toLeftOf="@id/buttonEdit"
        android:layout_toRightOf="@id/descriptionTextlable"
        android:text="Description: John Doe with a very long name that will wrap to the next line"

        android:textSize="14sp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEdit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="33dp"
        android:text="Select" />

    <TextView
        android:id="@+id/ageTextlable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: "
        android:textSize="16sp"
        android:textColor="#B06ED8"
        android:layout_below="@id/descriptionTextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_toRightOf="@id/ageTextlable"
        android:layout_toLeftOf="@id/checkBox"
        android:layout_toStartOf="@id/buttonEdit"
        android:layout_toEndOf="@id/ageTextlable"
        android:text="Age: John Doe with a very long name that will wrap to the next line"
        android:textSize="16sp"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#d1d1d1"
        android:padding="150dp"
        android:layout_below="@id/ageTextView"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
